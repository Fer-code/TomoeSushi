<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/iniciotransporte"
    tools:context=".activities.CadastroActivity">

    <androidx.cardview.widget.CardView
        app:cardCornerRadius="5dp"
        android:layout_width="300dp"
        android:layout_height="400dp"
        app:cardBackgroundColor="#FFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="30dp"
                    android:paddingRight="30dp">


                    <com.example.tomoesushi.views.CustomView
                        android:id="@+id/edtName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:ems="10"
                        android:hint="@string/nome"
                        android:inputType="textPersonName"
                        android:textColorHint="@color/black" />

                    <com.example.tomoesushi.views.CustomView
                        android:id="@+id/edtUser"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:ems="10"
                        android:hint="@string/user"
                        android:inputType="textPersonName"
                        android:textColorHint="@color/black" />

                    <com.example.tomoesushi.views.CustomView
                        android:id="@+id/edtEmail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:ems="10"
                        android:hint="@string/email"
                        android:inputType="textEmailAddress"
                        android:textColorHint="@color/black" />


                    <com.example.tomoesushi.views.CustomView
                        android:id="@+id/edtTel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:ems="10"
                        android:hint="@string/tel"
                        android:inputType="phone"
                        android:textColorHint="@color/black" />

                    <com.example.tomoesushi.views.CustomView
                        android:id="@+id/edtSenha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:ems="10"
                        android:hint="@string/senha"
                        android:inputType="textPassword"
                        android:textColorHint="@color/black" />

                    <com.example.tomoesushi.views.CustomView
                        android:id="@+id/edtConfSenha"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:ems="10"
                        android:hint="@string/confSenha"
                        android:inputType="textPassword"
                        android:textColorHint="@color/black" />


                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:onClick="cadastrarUsuario"
        android:text="@string/conf" />

</LinearLayout>